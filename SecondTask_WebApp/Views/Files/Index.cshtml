@model List<SecondTask_WebApp.ViewModels.FileViewModel>

@{
    ViewData["Title"] = "Загруженные файлы";
}

<h1>Загруженные файлы</h1>

<p>
    <a class="btn btn-primary" asp-action="Upload">Загрузить новый файл</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Имя файла</th>
            <th>Банк</th>
            <th>Период</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var f in Model)
    {
        <tr>
            <td>@f.Id</td>
            <td>@f.FileName</td>
            <td>@f.BankName</td>
            <td>@(f.PeriodFrom?.ToString("dd.MM.yyyy") ?? "") - @(f.PeriodTo?.ToString("dd.MM.yyyy") ?? "")</td>
            <td>
                <a asp-action="Details" asp-route-id="@f.Id">Посмотреть</a>
            </td>
        </tr>
    }
    </tbody>
</table>
